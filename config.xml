<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "co.com.autohak.autohak"
        versionCode="10" 
        version   = "0.0.0">

    <!-- versionCode is optional and Android only -->
	
	<!-- Name -->
    <name>AutoHak</name>
	
	<!-- Description -->
    <description>
        Easy management of AutoHak local garage business for my brother.
    </description>
    
	<!-- Author -->
	<author href="http://autohak.com.co" email="luiscarlosjayk@gmail.com">
        Luis Carlos Osorio Jayk
    </author>
	
	<!-- Icon -->
	<icon src="img/icon.png" gap:role="default" />
	<!-- Slash Sreen -->
	<gap:splash src="img/splash.png" />
	
	<!-- Access -->
	<access origin="http://luiscarlosjayk.com" subdomains="true" />
	<access origin="http://autohak.com.co" subdomains="true" />
	
	<!-- Preferences -->
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="false" />
	
	<!-- Permissions -->
	<plugin name="File" value="org.apache.cordova.FileUtils" />

	<!-- Platforms -->
	<gap:platform>
		<gap:platform name="android" />
	</gap:platform>
	

</widget>